{
  "manifest_version": 3,
  "name": "Focus Blocks",
  "description": "Reclaim your time, one block at a time.",
  "version": "1.0",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms",
    "tabs",
    "webNavigation",
    "notifications"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
